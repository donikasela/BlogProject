@model blogproject.Models.ViewModels.AddTagRequest
@{ 
    ViewData["Title"] = "Add New Tag";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="display-4">Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container mt-4">
    <h2>Add New Tag</h2>

    <form method="post" asp-action="Add">
        <div class="form-group">
            <label class="form-label">Tag Name:</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="displayName">Display Name:</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>
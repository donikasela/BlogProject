@model blogproject.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label for="id" class="form-label">Id:</label>
                <input type="text" id="id" class="form-control" asp-for="id" readonly />
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label for="displayName" class="form-label">Display Name:</label>
                <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-secondary">Update Tag</button>
                    <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTags" asp-action="Delete">
                        Delete Tag
                    </button>
                </div>
            </div>
        </form>
        }
        else
        {
            <p>Tags Not Found</p>
        }

</div>

@model List<blogproject.Models.Tag>

@{
    ViewData["Title"] = "View Tags";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="display-4">Show All Tags - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.id">
                                Edit
                            </a>
                        </td>
                        <td>
                            <form asp-area="" asp-controller="AdminTags" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@tag.id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Delete Tag
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="container">No Tags Are Found!</p>
    }
</div>

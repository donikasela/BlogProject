@model List<blogproject.Models.BlogPost>

<div class="container py-5">
    <div class="bg-secondary bg-opacity-10 p-4 mb-4">
        <h1 class="display-4">All Blog Posts - Admin Functionality</h1>
    </div>
    <div class="table-responsive">
        @if (Model.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Heading</th>
                        <th>Page Tittle</th>
                        <th>Tags</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blogPost in Model)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            <td>@blogPost.Heading</td>
                            <td>@blogPost.PageTittle</td>
                            <td>@blogPost.Tags</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No blog posts found.</p>
        }
    </div>
</div>

@model List<blogproject.Models.BlogPost>
@{
    ViewData["Title"] = "Blog Post List";
}
<div class="bg-secondary bg-opacity-10 p-4 mb-4">
    <h1 class="display-4">All Blog Posts - Admin Functionality</h1>
</div>
<div class="container py-5">

    <div class="table-responsive">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Heading</th>
                        <th>Page Tittle</th>
                        <th>Tags</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blogPost in Model)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            <td>@blogPost.Heading</td>
                            <td>@blogPost.PageTittle</td>
                            <td>
                                <div class="d-flex">
                                    @foreach (var tag in blogPost.Tags)
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Name</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No blog posts found.</p>
        }
    </div>
</div>
